
/**
 **array_range - creates an array of integers
 *@min: minimum number
 *@max: maximum number
 *
 *Return: pointer to the arrray on success or NULL on fail
 */
int *array_range(int min, int max)
{
int *my_array;
int count;
int current, i;

if (min > max)
{
return (NULL);
}
count = 1;
current = min;
while(current >= max)
{
current++;
count++;
}

my_array  = malloc(sizeof(int) * count);

if(my_array == NULL)
{
return (NULL);
}
