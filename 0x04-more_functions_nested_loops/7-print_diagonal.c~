#include "main.h"

/**
 *print_diagonal - draws a diagonal line on the terminal
 *@i: number of times to go to new line
 *@j: number of blank spaces per line
 */

void print_diagonal(int n)
{
	int i, j;

	if (n <= 0)
		_putchar('\n');
	for (i = 0; i < n; i++)
	{
		for (j = 0; j <= i; j++)
		{
			if (i == j)
			{
				_putchar('\\');
				_putchar('\n');
			}
			else
			{
				_putchar(' ');
			}
		}
	}
}
